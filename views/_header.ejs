<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <p>
                <a href='/'>
                    First Page
                </a>
            </p>
        </div>
    
        <div class="auth-links">
            <ul>
                <% if (locals.user){ %>
                <li>
                    <a href="/users/profile/<%=user._id%>"><%= user.name %></a>
                </li>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                </li>
                <% }else{ %>
                <li>
                    <a href="/users/sign-in"><button><h4>Sign In</h4></button></a>
                </li>
                <li>
                    <a href="/users/sign-up"><button><h4>Sign Up</h4></button></a>
                </li>
        
                <% } %>
            </ul>
        </div>
    </nav>
 


</header>