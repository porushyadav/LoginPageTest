<h1>Sign Up</h1>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<div style="margin:80px;">
<form action="/users/create" method="POST">
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="inputEmail4">Name</label>&emsp;&nbsp;
        <input type="text" name="name" style="width:15rem;" placeholder="Your Name" required>
      </div>  
      <div class="form-group col-md-5">
        <label for="inputEmail4">Email</label>&emsp;&emsp;&emsp;&emsp;&emsp;&nbsp;
        <input type="email" name="email" style="width:15rem;" placeholder="Your Email" required>
      </div>
      <br>
      <div class="form-group col-md-4">
        <label for="inputPassword4">Password</label>
        <input type="password" name="password" style="width:15rem;" placeholder="Password" id="inputPassword4" required>
      </div>
      <div class="form-group col-md-5">
        <label for="inputPassword">Confirm Password</label>
        <input type="password" name="confirm_password" style="width:15rem;" id="inputPassword" placeholder="Confirm Password" required>
      </div>
    </div>
    <button type="submit" class="btn btn-primary"  value="Sign Up">Sign Up</button>
  </form>


<p>
    <a href="/users/auth/google"><p><img src="https://image.flaticon.com/icons/svg/2702/2702602.svg" style="width:2rem;height:2rem"/>  Sign Up</p></a>
</p>
</div>
