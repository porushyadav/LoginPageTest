<link rel="stylesheet" href="/css/user_profile.css">




<% if(user.id == profile_user.id){ %>
    <!-- if user matches then show the form -->
    <form action="/users/update/<%= profile_user.id %>"  method="POST">
        <table>

        
       <tr>
           <td> Name:</td>
           <td><input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name %>" required></td>
        </tr>

       <tr>
           <td>Your Password:</td>
           <td><input type="password" name="password" placeholder="Your Password" required></td>
        </tr>
        <tr>
            <td>New Password:</td>
            <td><input type="password" name="new_password" placeholder="New Password"  required></td>
        </tr>
       </table>
        <div class="button"><button type="submit"  value="Update">Update</button></div>
    </form>
    
<%}%>    
   
